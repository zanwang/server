#header
  clearfix()
  padding: 30px 0 50px

#header-title-wrap
  float: left

#header-title
  font-weight: 300
  font-size: 25px
  line-height: header-height

#user-link-wrap
  float: right
  position: relative

#user-link
  cursor: pointer
  user-select: none

#user-avatar
  width: header-height
  height: @width
  border-radius: 50%
  float: left
  margin-right: 10px

#user-name
  float: left
  color: color-text
  text-decoration: none
  line-height: header-height
  white-space: nowrap

#user-menu
  position: absolute
  top: 100%
  background: #fff
  padding: 10px
  margin-top: 10px
  box-shadow: 0 3px 20px color-shadow
  border-radius: 2px
  display: none
  z-index: 1000
  &.active
    display: block
  &:before
    content: ""
    position: absolute
    border-width: 8px
    border-style: solid
    border-color: transparent transparent #fff
    top: @border-width * -2
    left: 50%
    margin-left: @border-width * -1

.user-menu-link
  display: block
  white-space: nowrap
  color: color-text
  text-decoration: none
  cursor: pointer
  line-height: 1
  padding: 10px 20px
  text-align: center
  border-radius: 3px
  &:hover
    background: color-orange
    color: #fff