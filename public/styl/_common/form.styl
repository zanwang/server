.input-group
  margin: 20px 0
  position: relative

.input
  border: none
  padding: 0 0 10px
  font-family: font-sans
  font-size: font-size
  outline: none
  border-bottom: 1px dashed color-border
  width: 100%
  transition: 0.2s
  background: none
  color: color-text
  &:focus
    border-bottom: 1px solid color-orange
  &.ng-invalid.ng-dirty
    border-bottom: 1px solid color-pink

.input-label
  color: color-minor
  padding-bottom: 1em
  line-height: 1
  display: block

.input-error
  color: color-pink
  font-size: 0.9em
  font-weight: bold
  padding-top: 0.5em
  &:before
    content: "\f071"
    font-family: font-icon
    padding-right: 6px

.input-desc
  padding: 10px 0
  font-size: 0.9em
  line-height: 1.6
  color: color-minor